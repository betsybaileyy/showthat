<form method="POST" action="/thoughts">
  <fieldset>
    <legend>New Thought</legend>
    <!-- TITLE -->
    <p>
      <label for="show">Show</label><br>
      <input id="show-title" type="text" name="show" />
    </p>
    <p>
      <label for="content-text">What would you like to say?</label><br>
      <textarea id="content-text" name="content" rows="10" /></textarea>
    </p>
  </fieldset>

  <!-- BUTTON -->
  <p>
    <button type="submit">Save Thought</button>
  </p>

</form>
